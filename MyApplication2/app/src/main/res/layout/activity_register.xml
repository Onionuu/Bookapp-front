<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/register_usernameTextView"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="用户名" />

        <EditText
            android:id="@+id/register_usernameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入用户名"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/register_passwdTextView"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="密码" />

        <EditText
            android:id="@+id/register_passwdInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入密码"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/register_passwdConfirmText"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="确认密码" />

        <EditText
            android:id="@+id/register_passwdConfirmInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请重新输入一次密码"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/register_cityText"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="城市" />

        <TextView
            android:id="@+id/register_cityInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:hint="请选择城市"
            android:gravity="right"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/register_collegeText"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="学校" />

        <TextView
            android:id="@+id/register_collegeInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请选择学校"
            android:clickable="true"
            android:gravity="right"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/register_majorText"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="专业" />

        <EditText
            android:id="@+id/register_majorInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入专业"
            android:clickable="true"
            android:gravity="right"
            />
    </LinearLayout>

    <Button
        android:id="@+id/registerButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="350dp"
        android:text="注册" />


</LinearLayout>